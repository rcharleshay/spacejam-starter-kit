{
  "name": "my-telus-session",
  "version": "1.0.0",
  "private": true,
  "license": "proprietary",
  "description": "TELUS Isomorphic Starter Kit",
  "author": "TELUS",
  "engines": {
    "node": ">=8"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "cd app && npm test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-angular": "^8.1.0",
    "@telus/semantic-release-config": "^1.3.6",
    "husky": "^3.0.0"
  },
  "scripts": {
    "prepush-example": "docker-compose build && docker-compose run e2e && docker-compose run lighthouse && docker-compose down",
    "release:dryrun": "npx semantic-release --dry-run --branch $(git describe --contains --all HEAD)",
    "release": "npx semantic-release"
  }
}
